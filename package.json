{
  "name": "react-essentials-functions",
  "version": "1.1.0",
  "author": "maxgfr",
  "license": "MIT",
  "description": "A collection of zero-dependency useful hooks and components for React",
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/maxgfr/react-essentials-functions.git"
  },
  "bugs": {
    "url": "https://github.com/maxgfr/react-essentials-functions/issues"
  },
  "homepage": "https://github.com/maxgfr/react-essentials-functions#readme",
  "files": [
    "build"
  ],
  "keywords": [
    "hooks",
    "react",
    "components",
    "useful",
    "zero-dependencies"
  ],
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "rimraf build",
    "build": "tsc -p tsconfig.build.json",
    "build:watch": "tsc -w -p tsconfig.build.json",
    "typecheck": "tsc -p tsconfig.build.json --noEmit",
    "lint": "eslint ./src --ext .ts,.tsx",
    "format": "prettier --write './src/**/*.{ts,js,json,tsx,jsx}'",
    "format:check": "prettier --check './src/**/*.{ts,js,json,tsx,jsx}'",
    "ci": "pnpm run typecheck && pnpm run lint && pnpm run format:check && pnpm run test:coverage",
    "release": "semantic-release"
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0"
  },
  "devDependencies": {
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.5",
    "@semantic-release/npm": "^13.1.4",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.19.9",
    "@types/react": "^18.3.28",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jest": "^28.14.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.8.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rimraf": "^6.1.2",
    "semantic-release": "^25.0.3",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  }
}
